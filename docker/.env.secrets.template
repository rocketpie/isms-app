# ---- Postgres ----
POSTGRES_USER=postgres
POSTGRES_PASSWORD=REPLACE_ME_strong_db_root_pw
POSTGRES_DB=postgres

# Authenticator role (used by PostgREST to switch to anon/authenticated/editor)
AUTHENTICATOR_PASSWORD=REPLACE_ME_strong_authenticator_pw

# ---- JWT / Auth (GoTrue <-> PostgREST must MATCH) ----
# 256-bit/32-byte secret recommended (base64 or hex ok)
JWT_SECRET=REPLACE_ME_super_random_256bit

# GoTrue (auth) basic config
GOTRUE_SITE_URL=http://localhost:7770
GOTRUE_API_PORT=7779
GOTRUE_DB_URL=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?sslmode=disable

# ---- Optional email for dev (autoconfirm on) ----
GOTRUE_EXTERNAL_EMAIL_ENABLED=true
GOTRUE_MAILER_AUTOCONFIRM=true

# ---- PostgREST ----
PGRST_DB_URI=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
PGRST_DB_SCHEMA=isms
PGRST_DB_ANON_ROLE=anon
PGRST_DB_ROLE=authenticator

# ---- Next.js (public; not “secrets” but keep together for convenience) ----
NEXT_PUBLIC_API_URL=http://localhost:7771
NEXT_PUBLIC_AUTH_URL=http://localhost:7779
NEXT_PUBLIC_SITE_URL=http://localhost:7770
